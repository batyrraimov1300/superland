<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Superland" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_700</item>
    </style>

    <style name="Theme.Superland.Fullscreen" parent="Theme.Superland">
        <item name="android:actionBarStyle">@style/Widget.Theme.Superland.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/my_color</item>
    </style>

    <style name="ThemeOverlay.Superland.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/my_color</item>
        <item name="fullscreenTextColor">@color/my_color</item>
    </style>
</resources>